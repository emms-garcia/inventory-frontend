div(class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main")
  h1(class="page-header") {{ 'PRODUCTS' | translate }}
  h3(class="sub-header") {{ 'UOMS' | translate }}
    button(class="btn btn-sm btn-primary", ng-click="vm.openCreateUOMModal()", type="button", tooltip="{{ 'CREATE_UOM' | translate}}")
      span(class="glyphicon glyphicon-plus")
  div(class="table-responsive")
    table(class="table table-striped")
      thead
        tr
          th(style="width: 10%;") {{ 'NAME' | translate }}
          th(colspan="2") {{ 'DESCRIPTION' | translate }}
      tbody
        tr(ng-if="vm.uoms.length === 0")
          td(class="text-center", colspan="5") {{ 'NO_UOMS_DEFINED' | translate }}
        tr(ng-repeat="uom in vm.uoms")
          td {{ uom.name }}
          td {{ uom.description || 'N/A' }}
          //-td(style="width:5%;")
            button.btn.btn-info(ng-click="vm.editUOM(uom)", tooltip="{{ 'EDIT_UOM' | translate }}")
              span.glyphicon.glyphicon-pencil
          td(style="width:5%;")
            button(class="btn btn-danger", ng-click="vm.deleteUOM(uom.id)", tooltip="{{ 'DELETE_UOM' | translate }}")
              span(class="glyphicon glyphicon-remove")


  h3(class="sub-header") {{ 'PRODUCTS' | translate }}
    button(class="btn btn-sm btn-primary", ng-click="vm.openCreateProductModal()", ng-disabled="vm.uoms.length === 0", type="button")
      span(class="glyphicon glyphicon-plus")
  div(class="alert alert-warning", ng-show="vm.uoms.length === 0") {{ 'CANNOT_ADD_PRODUCT_NEED_UOM' | translate }}
  div(class="table-responsive")
    table(class="table table-striped")
      thead
        tr
          th(style="width: 10%;") {{ 'NAME' | translate }}
          th {{ 'DESCRIPTION' | translate }}
          th {{ 'UOM' | translate }}
          th {{ 'PRICE_PER_UOM' | translate }}
          th
      tbody
        tr(ng-if="vm.products.length === 0")
          td(class="text-center", colspan="5") {{ 'NO_PRODUCTS_DEFINED' | translate }}
        tr(ng-repeat="product in vm.products")
          td {{ product.name }}
          td {{ product.description || 'N/A' }}
          td {{ product.uom.name }}
          td {{ product.price_per_uom }}
          //-td(style="width:5%;")
            button.btn.btn-info(ng-click="vm.editProduct(product)", tooltip="{{ 'EDIT_PRODUCT' | translate }}")
              span.glyphicon.glyphicon-pencil
          td(style="width:5%;")
            button(class="btn btn-danger", ng-click="vm.deleteProduct(product.id)", tooltip="{{ 'DELETE_PRODUCT' | translate }}")
              span(class="glyphicon glyphicon-remove")

    h3(class="sub-header") {{ 'PRODUCT_GROUPS' | translate }}
      button(class="btn btn-primary btn-sm", ng-click="vm.openCreateProductGroupModal()", type="button", ng-disabled="vm.products.length === 0")
        span(class="glyphicon glyphicon-plus")

  div(class="alert alert-warning", ng-show="vm.products.length === 0") {{ 'CANNOT_ADD_PRODUCT_GROUP_NEED_PRODUCT' | translate }}
  div(class="table-responsive")
    table(class="table table-striped")
      thead
        tr
          th(style="width: 10%;") {{ 'NAME' | translate }}
          th {{ 'DESCRIPTION' | translate }}
          th
      tbody
        tr(ng-if="vm.product_groups.length === 0")
          td(class="text-center", colspan="5") {{ 'NO_PRODUCTS_DEFINED' | translate }}
        tr(ng-repeat="product_group in vm.product_groups")
          td {{ product_group.name }}
          td {{ product_group.description }}
          td(style="width:5%;")
            button(class="btn btn-danger", ng-click="vm.deleteProductGroup(product_group.id)", tooltip="{{ 'DELETE_PRODUCT_GROUP' | translate }}")
              span(class="glyphicon glyphicon-remove")
