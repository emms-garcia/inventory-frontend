form(class="form-horizonal", name="form", ng-submit="vm.create()", novalidate)
  div(class="modal-header")
    h3(class="modal-title") {{ 'CREATE_PRODUCT' | translate }}
  div(class="modal-body")
    div(class="row")
      div(class="col-sm-6")
        div(class="row form-group")
          label(class="col-sm-5", for="name") *{{ 'NAME' | translate }}:
          div(class="col-sm-7")
            input(class="form-control", id="name", required, ng-model="vm.name", type="text", placeholder="{{ 'NAME' | translate }}")
        div(class="row form-group")
          label(class="col-sm-5", for="description") {{ 'DESCRIPTION' | translate }}:
          div(class="col-sm-7")
            textarea(class="form-control", id="description", ng-model="vm.description", type="text", placeholder="{{ 'DESCRIPTION' | translate }}")

        div(class="row form-group")
          label(class="col-sm-5", for="quantity") *{{ 'QUANTITIES' | translate }}:
          div(class="col-sm-7")
            input(class="form-control", id="quantity", required, ng-model="vm.quantity", type="number", placeholder="{{ 'QUANTITIES' | translate }}", min="1", value="1")

        div(class="row form-group")
          label(class="col-sm-5", for="price-per-unit") *{{ 'PRICE_PER_PRODUCT' | translate }}:
          div(class="col-sm-7")
            input(class="form-control", id="price-per-unit", required, ng-model="vm.pricePerUnit", type="number", placeholder="{{ 'PRICE_PER_PRODUCT' | translate }}")
  div(class="modal-footer")
    button(class="btn btn-primary btn-lg", type="submit", ng-disabled="form.$invalid") {{ 'CREATE' | translate }}
    button(class="btn btn-lg", type="button", ng-click="vm.cancel()") {{ 'CANCEL' | translate }}
