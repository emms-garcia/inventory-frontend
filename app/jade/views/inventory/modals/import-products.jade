form(ng-submit="vm.importProducts()", novalidate)
  div(class="modal-header")
    h3(class="modal-title") {{ 'IMPORT_PRODUCTS' | translate }}
  div(class="modal-body")
    div(class="form-group")
      p(class="lead") {{Â 'IMPORT_PRODUCTS_INFO' | translate }}
    div(class="form-group has-feedback", ng-class="{ 'has-success': vm.f !== null }")
      button(class="btn btn-primary", type="file", ngf-select="vm.uploadFiles($file, $invalidFiles)", accept="text/csv", ngf-max-size="20MB")
        span(class="glyphicon glyphicon-upload")
        | &nbsp; {{ 'SELECT_FILE' | translate }}
      p(class="help-block lead") &nbsp; {{vm.f.name}}
  div(class="modal-footer")
    button(class="btn btn-primary btn-lg", type="submit", ng-disabled="!vm.f") {{ 'IMPORT' | translate }}
    button(class="btn btn-lg", type="button", ng-click="vm.cancel()") {{ 'CANCEL' | translate }}
