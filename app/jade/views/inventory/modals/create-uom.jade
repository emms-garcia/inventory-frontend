form(class="form-horizonal", name="form", ng-submit="vm.create()", novalidate)
  div(class="modal-header")
    h3(class="modal-title") {{ 'CREATE_UOM' | translate }}
  div(class="modal-body")
    div(class="row form-group")
      label(class="col-sm-3", for="name") *{{ 'NAME' | translate }}:
      div(class="col-sm-7")
        input(class="form-control", id="name", required, ng-model="vm.name", type="text", placeholder="{{ 'NAME' | translate }}")
    div(class="row form-group")
      label(class="col-sm-3", for="name") *{{ 'SHORT_NAME' | translate }}:
      div(class="col-sm-7")
        input(class="form-control", id="name", required, ng-model="vm.short_name", type="text", placeholder="{{ 'SHORT_NAME' | translate }}")
    div(class="row form-group")
      label(class="col-sm-3", for="description") {{ 'DESCRIPTION' | translate }}:
      div(class="col-sm-7")
        textarea(class="form-control", id="description", ng-model="vm.description", type="text", placeholder="{{ 'DESCRIPTION' | translate }}")

  div(class="modal-footer")
    button(class="btn btn-primary btn-lg", type="submit", ng-disabled="form.$invalid") {{ 'CREATE' | translate }}
    button(class="btn btn-lg", type="button", ng-click="vm.cancel()") {{ 'CANCEL' | translate }}
