form(class="form-horizonal", name="form", ng-submit="vm.create()", novalidate)
  div(class="modal-header")
    h3(class="modal-title") {{ 'CREATE_PRODUCT' | translate }}
  div(class="modal-body")
    div(class="row form-group")
      label(class="col-sm-3", for="name") *{{ 'NAME' | translate }}:
      div(class="col-sm-7")
        input(class="form-control", id="name", required, ng-model="vm.name", type="text", placeholder="{{ 'NAME' | translate }}")
    div(class="row form-group")
      label(class="col-sm-3", for="description") {{ 'DESCRIPTION' | translate }}:
      div(class="col-sm-7")
        textarea(class="form-control", id="description", ng-model="vm.description", type="text", placeholder="{{ 'DESCRIPTION' | translate }}")
    div(class="row form-group")
      label(class="col-sm-3", for="uom") *{{ 'UOM' | translate }}:
      div(class="col-sm-7")
        select(class="form-control", ng-model="vm.selectedUOM", ng-options="uom.resource_uri as uom.name for uom in vm.uoms", required)
          option(value="") {{ 'NO_OPTION_SELECTED' | translate }}
    div(class="row form-group")
      label(class="col-sm-3", for="quantity") *{{ 'QUANTITY' | translate }}:
      div(class="col-sm-7")
        input(class="form-control", id="quantity", required, ng-model="vm.quantity", type="number", placeholder="{{ 'QUANTITY' | translate }}")
    div(class="row form-group")
      label(class="col-sm-3", for="price-per-unit") *{{ 'PRICE_PER_UNIT' | translate }}:
      div(class="col-sm-7")
        div(class="input-group")
          span(class="input-group-addon") $
          input(class="form-control", id="price-per-unit", required, ng-model="vm.pricePerUnit", type="number", placeholder="{{ 'PRICE_PER_PRODUCT' | translate }}")
  div(class="modal-footer")
    div(class="btn-group")
      div(class="dropdown")
        button(data-toggle="dropdown", class="btn btn-primary btn-lg", ng-disabled="form.$invalid")
          | {{ 'CREATE' | translate }}
          i(class="icon-down-open")
        ul(class="dropdown-menu dropdown-menu-right")
          li
            a(href="", ng-click="vm.create(true)") {{ 'CREATE_AND_ADD_NEW' | translate }}
            a(href="", ng-click="vm.create()") {{ 'CREATE_AND_EXIT' | translate }}

    button(class="btn btn-lg", type="button", ng-click="vm.cancel()") {{ 'CANCEL' | translate }}
