div(class="product-group-card")
  table(class="table table-striped table-condensed")
    thead
      tr
        th(class="text-center", colspan="4")
          input(class="pull-left", type="checkbox", ng-model="vm.group.selected")
          span {{ vm.group.name }}
    tbody
      tr
        td(colspan="4")
          strong {{ 'DESCRIPTION' | translate }}:
          | {{ vm.group.description }}
      tr
        th {{ 'NAME' | translate }}
        th {{ 'REQUIRED_QUANTITY' | translate }}
        th {{ 'REAL_QUANTITY' | translate }}
        th {{ 'PRICE_PER_PRODUCT' | translate }}
      tr(ng-repeat="product in vm.group.products")
        td {{ product.name }}
        td {{ product.required_quantity }}
        td {{ product.real_quantity }}
        td ${{ product.price }}
      tr
        th(colspan="2")
        th {{ 'TOTAL' | translate }}
        th ${{ vm.group.total }}