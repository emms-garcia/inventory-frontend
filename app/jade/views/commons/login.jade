div(class="row")
	div(class="col-sm-6 col-sm-offset-3")
		div(class="jumbotron")
			div(class="row")
				div(class="col-sm-10 col-sm-offset-1")
					h2 {{ 'APP_NAME' | translate }}

					form
						div(class="form-group")
							label(for="email") {{ 'USERNAME' | translate }}:
							input(class="form-control", id="email", tabindex="1", type="email", placeholder="{{ 'USERNAME' | translate }}", ng-model="vm.username")
						div(class="form-group")
							label(for="password") {{ 'PASSWORD' | translate }}:
							input(class="form-control", id="password", tabindex="2", type="password", placeholder="{{ 'PASSWORD' | translate }}", ng-model="vm.password")
			div(class="row")
				div(class="col-sm-4 col-sm-offset-2")
					button(class="btn btn-primary", type="submit", ng-click="vm.logIn()")  {{ 'LOG_IN' | translate }}
				div(class="col-sm-4")
					button(class="btn btn-default", ui-sref="signup") {{ 'SIGN_UP' | translate }}
