form(class="form-horizonal", name="form", ng-submit="vm.add()", novalidate)
  div(class="modal-header")
    h3(class="modal-title") {{ 'ADD_PRODUCT' | translate }}
  div(class="modal-body")
    div(class="form-group row")
      label(class="col-sm-3", for="product") *{{ 'PRODUCT' | translate }}:
      div(class="col-sm-7")
        select(class="form-control", ng-model="vm.selectedProduct", ng-options="product as product.name for product in vm.products", required)
          option(value="") {{ 'NO_OPTION_SELECTED' | translate }}
    div(ng-show="vm.selectedProduct")
      h4 {{ 'PRODUCT' | translate }}
      hr
      div(class="row")
        div(class="col-md-6")
          div(class="form-group")
            label(class="control-label", for="name") {{ 'NAME' | translate }}:
            input(class="form-control", id="name", placeholder="{{ vm.selectedProduct.name }}", type="text", disabled)
        div(class="col-md-6")
          div(class="form-group")
            label(class="control-label", for="description") {{ 'DESCRIPTION' | translate }}:
            textarea(class="form-control", id="description", placeholder="{{ vm.selectedProduct.description }}", type="text", disabled)
      div(class="row")
        div(class="col-md-6")
          div(class="form-group")
            label(class="control-label", for="price_per_unit") {{ 'PRICE_PER_UNIT' | translate }}:
            input(class="form-control", id="price_per_unit", placeholder="{{ vm.selectedProduct.price_per_unit }}", type="text", disabled)
        div(class="col-md-6")
          div(class="form-group")
            label(class="control-label", for="quantity") {{ 'QUANTITY' | translate }}:
              input(class="form-control", id="quantity", placeholder="{{ vm.selectedProduct.quantity }}", type="text", disabled)

  div(class="modal-footer")
    button(class="btn btn-primary btn-lg", type="submit", ng-disabled="form.$invalid") {{ 'ADD' | translate }}
    button(class="btn btn-lg", type="button", ng-click="vm.cancel()") {{ 'CANCEL' | translate }}
