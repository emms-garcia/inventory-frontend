form(class="form-horizonal", name="form", ng-submit="vm.add()", novalidate)
  div(class="modal-header")
    h3(class="modal-title") {{ 'ADD_PRODUCT' | translate }}
  div(class="modal-body")
    div(class="form-group row")
      label(class="col-sm-3", for="product") *{{ 'PRODUCT' | translate }}:
      div(class="col-sm-7")
        select(class="form-control", ng-model="vm.selectedProduct", ng-options="product as product.name for product in vm.products", required)
          option(value="") {{ 'NO_OPTION_SELECTED' | translate }}
    div(ng-show="vm.selectedProduct")
      h4 {{ 'PRODUCT' | translate }}
      hr
      div(class="form-group row")
        label(class="col-sm-3 control-label") {{ 'NAME' | translate }}:
        div(class="col-sm-7")
          p(class="form-control-static") {{ vm.selectedProduct.name || 'N/A' }}
      div(class="form-group row")
        label(class="col-sm-3 control-label") {{ 'DESCRIPTION' | translate }}:
        div(class="col-sm-7")
          p(class="form-control-static") {{ vm.selectedProduct.description || 'N/A' }}
      div(class="form-group row")
        label(class="col-sm-3 control-label") {{ 'QUANTITY' | translate }}:
        div(class="col-sm-7")
          p(class="form-control-static") {{ vm.selectedProduct.quantity || 'N/A' }}
      div(class="form-group row")
        label(class="col-sm-3 control-label") {{ 'PRICE_PER_UNIT' | translate }}:
        div(class="col-sm-7")
          p(class="form-control-static") {{ vm.selectedProduct.price_per_unit || 'N/A' }}
  div(class="modal-footer")
    button(class="btn btn-primary btn-lg", type="submit", ng-disabled="form.$invalid") {{ 'ADD' | translate }}
    button(class="btn btn-lg", type="button", ng-click="vm.cancel()") {{ 'CANCEL' | translate }}
