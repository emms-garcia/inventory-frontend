div(class="transactions-history col-md-12")
  div(class="table-responsive")
    table(class="table table-striped")
      thead
        tr
          th {{ 'ID' | translate }}
          th {{ 'CREATED_AT' | translate }}
          th {{ 'NAME' | translate }}
          th {{ 'DESCRIPTION' | translate }}
          th {{ 'TYPE' |  translate }}
          th {{ 'CLIENT' | translate }}
          th {{ 'TOTAL' | translate }}
          th
      tbody
        tr
          th {{ vm.transaction.id }}
          th {{ (vm.transaction.created_at * 1000) | date:'dd/MMM/yyyy hh:mm a' }}
          th {{ vm.transaction.name }}
          th {{ vm.transaction.description || 'N/A' }}
          th {{ (vm.transaction.type === 'sale' ? 'SALE' : 'PURCHASE') | translate }}
          th
            a(ui-sref="clients.detail({'clientId': vm.transaction.client.id})") {{ vm.transaction.client.name }}
          th ${{ vm.transaction.voucher.total || 0.0 }}
          th
            button(class="btn-sm btn btn-default", ng-click="vm.toggleDetails()")
              span(class="glyphicon", ng-class="{ 'glyphicon-eye-open': !vm.showDetails, 'glyphicon-eye-close': vm.showDetails }")
      tbody
        tr(ng-show="vm.showDetails")
          td(colspan="7")
            div(class="table-responsive")
              table(class="table table-striped")
                thead
                  tr
                    th {{ 'NAME' | translate }}
                    th {{ 'PRICE' | translate }}
                    th {{ 'QUANTITY' | translate }}
                    th {{ 'TOTAL' | translate }}
                    th {{ 'PRICE_WAS_MODIFIED' | translate }}
                tbody
                  tr(ng-repeat="product in vm.transaction.voucher.cart")
                    td {{ product.name }}
                    td ${{ product.price || 0.0 }}
                    td {{ product.quantity || 0.0 }}
                    td ${{ product.total }}
                    td {{ ((product.price !== product.real_price) ? 'YES' : 'NO') | translate }}
