div(class="clients-section section")
  div(class="row")
    div(class="col-sm-12")
      h2(class="page-header") {{ 'CLIENTS' | translate }}

  div(class="row")
    div(class="col-sm-3")
      div(class="input-group")
        input(class="form-control col-sm-4", ng-model="vm.query", type="text", placeholder="{{ 'SEARCH' | translate }}")
        span(class="input-group-btn")
          button(class="btn")
            span(class="glyphicon glyphicon-search")
    div(class="col-sm-9")
      div(class="btn-group pull-right", uib-dropdown)
        button(id="single-button", type="button", class="btn btn-primary", uib-dropdown-toggle, ng-disabled="disabled") &nbsp; {{Â 'ACTIONS' | translate }} &nbsp;
          span(class="caret")
        ul(class="dropdown-menu", uib-dropdown-menu, role="menu", aria-labelledby="single-button")
          li(role="menuitem")
            a(href="", ng-click="vm.openCreateClientModal()") {{ 'CREATE_CLIENT' | translate }}

  div(class="row")
    div(class="col-sm-12")
      div(class="table-responsive table-list")
        table(class="table table-striped")
          thead
            tr
              th {{ "NAME" | translate }}
              th {{ "EMAIL" | translate }}
              th {{ "COMPANY" | translate }}
              th {{ "RFC" | translate }}
              th {{ "PHONE" | translate }}
              th {{ "CELLPHONE" | translate }}
              th {{ "ADDRESS" | translate }}
              th
          tbody
            tr(ng-if="vm.clients.length === 0")
              td(class="text-center", colspan="10")
                p {{ 'NO_CLIENTS_DEFINED' | translate }}
            tr(ng-repeat="client in vm.clients | filter: vm.query", ui-sref="clients.detail({'clientId': client.id})")
              td
                p {{ client.name || ("NOT_SPECIFIED" | translate ) }}
              td
                p {{ client.email || ("NOT_SPECIFIED" | translate ) }}
              td
                p {{ client.company || ("NOT_SPECIFIED" | translate ) }}
              td
                p {{ client.rfc || ("NOT_SPECIFIED" | translate ) }}
              td
                p {{ client.phone || ("NOT_SPECIFIED" | translate ) }}
              td
                p {{ client.cellphone || ("NOT_SPECIFIED" | translate ) }}
              td
                p {{ client.address || ("NOT_SPECIFIED" | translate ) }}
              td
                button(class="btn btn-danger btn-sm", type="button", ng-click="$event.stopPropagation(); vm.deleteClient(client.id)", tooltip="{{ 'DELETE_CLIENT' | translate }}") &times;
